<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
                android:id="@+id/text_id_platodetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:hint="id"
               />


            <TextView
                android:id="@+id/text_cantidad_platos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="cantidad"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                 />


            <TextView
                android:id="@+id/text_precio_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:hint="subtotal a pagar"
                android:textColor="#FF5722"
            />



            <ImageView
                android:id="@+id/image_delete_pedido"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_delete_pedido" />

    </LinearLayout>

</LinearLayout>