<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.LoginActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="98dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo_comida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="296dp"
        android:layout_height="183dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="#E0E0E0"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image">

        <EditText
            android:id="@+id/edit_nombre_login"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/ic_login"
            android:drawablePadding="15dp"
            android:drawableStart="@drawable/ic_login"
            android:ems="13"
            android:hint=" Usuario"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_password_login"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="15dp"
            android:ems="13"
            android:hint=" Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/butoon_shape"
            android:ems="13"
            android:text="Ingresar"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Olvidaste Contraseña" />
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#E0E0E0"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvRegistrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#E0E0E0"
            android:text="@string/registrate"
            android:textColor="#ff5f47"
            android:textColorLink="#ff5f47"
            tools:layout_editor_absoluteY="524dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>